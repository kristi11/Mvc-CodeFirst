@model Mvc.Domain.ViewModels.ImportProductsViewModel
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Compare", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="form-horizontal">
        <h4>Compare Product</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Upload Excel File</label>
            <div class="col-md-10 ">
                <input type="file" class="form-control" name="uploadfile" id="uploadfile" />
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)ViewBag.CategoryId, "--Select--", new { id = "CategoryId", @class = "form-control" })
                <span>Please select the list of products exported from finance you have created before (no funitor)</span>
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DeleteExisting, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(m => m.DeleteExisting, new { @class = "", @checked = "checked", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.DeleteExisting, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="submit" value="Compare" class="btn btn-default" />
        @*<input type="submit" value="Compare and Export" class="btn btn-default" />*@
        <br />
        <br />

    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

