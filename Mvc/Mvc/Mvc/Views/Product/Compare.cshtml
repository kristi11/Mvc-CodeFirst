@using Mvc.Domain.ViewModels
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<CompareViewModel>

@{
    ViewBag.Title = "Compare List";
}
<h2>Products Compared List</h2>

<p>
    @Html.ActionLink("Import Product to Compare", "ImportProducts", "Product", new { @class = "btn btn-primary" })
    @Html.ActionLink("Export Compared Product", "ExportComparedProduct", "Product", new { @class = "btn btn-primary" })
</p>
<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th> @Html.Label("Barcode")</th>
            <th> @Html.Label("Kod")</th>
            <th> @Html.Label("Name")</th>
            <th> @Html.Label("Furnitor")</th>
            <th> @Html.Label("Klasifikimi")</th>
            <th> @Html.Label("Quantity")</th>
            <th> @Html.Label("Products Price")</th>
            <th> @Html.Label("Furnitor Price")</th>
            <th> @Html.Label("Small Price")</th>
            <th> @Html.Label("Product Found")</th>
            <th> @Html.Label("DateCreated")</th>
            <th> @Html.Label("DateModified")</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Barcode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FunitorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Klasifikim)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FurnitorPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SmallPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductFound)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateModified)
                    </td>

                </tr>
            }
        }
    </tbody>

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Compare", new { page, currentFilter = ViewBag.CurrentFilter }))

